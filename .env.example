# MCP OpenMetadata Server Configuration
# Copy this file to .env and fill in your values

# OpenMetadata Connection
OPENMETADATA_HOST=http://localhost:8585
OPENMETADATA_USERNAME=admin
OPENMETADATA_PASSWORD=admin
# OPENMETADATA_JWT_TOKEN=your-openmetadata-jwt-token-if-using-token-auth

# Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8000
WEBSOCKET_PORT=8001
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8585

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-32-chars-minimum
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key
DEFAULT_API_KEY=mcp-openmetadata-default-key-change-this

# Google OAuth Configuration
# Get these from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Google+ API
# 4. Create OAuth 2.0 credentials
# 5. Add your redirect URI: http://localhost:8000/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
# Optional: Restrict to specific email domains (comma-separated)
# OAUTH_ALLOWED_DOMAINS=example.com,company.org
OAUTH_SESSION_SECRET=your-oauth-session-secret-change-this-in-production-32-chars-minimum

# Monitoring Configuration
# Optional: Configure Sentry for error monitoring
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging Configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
